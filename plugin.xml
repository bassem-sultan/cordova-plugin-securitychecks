<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-securitychecks" version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

  <name>cordova-plugin-securitychecks</name>
  <description>Basic security checks for Cordova apps (debug/emulator)</description>
  <license>Apache-2.0</license>
  <keywords>cordova, security, checks</keywords>

  <js-module src="www/securitychecks.js" name="SecurityChecks">
    <clobbers target="SecurityChecks"/>
  </js-module>

  <platform name="android">
    <config-file target="app/src/main/res/xml/config.xml" parent="/*">
      <feature name="SecurityChecks">
        <param name="android-package" value="com.app.securitychecks.SecurityChecks" />
      </feature>
    </config-file>
    <source-file src="src/android/com/app/securitychecks/SecurityChecks.java"
                 target-dir="app/src/main/java/com/app/securitychecks" />
  </platform>

  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <feature name="SecurityChecks">
        <param name="ios-package" value="SecurityChecks" />
      </feature>
    </config-file>
    <source-file src="src/ios/SecurityChecks.m" />
  </platform>

  <engines>
    <engine name="cordova" version=">=10.0.0" />
    <engine name="cordova-android" version=">=10.0.0" />
    <engine name="cordova-ios" version=">=6.2.0" />
  </engines>
</plugin>
